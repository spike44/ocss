<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC '-//ibatis.apache.org//DTD SQL Map 2.0//EN' 'http://ibatis.apache.org/dtd/sql-map-2.dtd'>
<sqlMap namespace="member" >
	
	
	
	<statement id="select" parameterClass="disc.ocss.model.MemberVO"
		resultClass="disc.ocss.model.MemberVO">

		select * from memberr

		<dynamic prepend="where">

			<isNotEmpty property="memberId" prepend="and">
				member_Id=#memberId#
			</isNotEmpty>
		
		</dynamic>
	</statement>

	<insert id="insert" parameterClass="disc.ocss.model.MemberVO">
		
		insert into memberr values(
			#memberId#,
			#password#,
			#phone#,
			#email#,
			#powerList#,
			#memberImage#,
			#approval#,
			sysdate			
		</insert>
	<update id="update" parameterClass="disc.ocss.model.MemberVO">
		passwrod=#password#,
			phone =#phone#,
			email= #email#,
			power_list =#powerList#,
			member_image =#memberImage#,
			approval=#approval#,
		
		</update>
</sqlMap>

			